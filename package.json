{
  "name": "mdmanroh",
  "displayName": "MDMan",
  "description": "Ease and automate boring markdown stuff like link creation.",
  "readme": "./README.md",
  "publisher": "IT-Administrators",
  "repository": {
    "type": "git",
    "url": "https://github.com/IT-Administrators/mdmanroh"
  },
  "homepage": "https://github.com/IT-Administrators/mdmanroh",
  "icon": "img/mdmanroh-icon.png",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "extensions": [
          ".md"
        ]
      }
    ],
    "codeActions": [
      {
        "language": "markdown",
        "kind": "quickfix"
      }
    ],
    "commands": [
      {
        "command": "mdmanroh.createNewReference",
        "title": "MDMan: Create New Reference Link"
      },
      {
        "command": "mdmanroh.convertInlineToReference",
        "title": "MDMan: Convert Inline Link to Reference Link"
      },
      {
        "command": "mdmanroh.pickLabel",
        "title": "MDMan: Insert Reference Label"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
